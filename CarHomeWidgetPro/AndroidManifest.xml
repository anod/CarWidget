<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.anod.car.home.pro"
      android:versionCode="7"
      android:versionName="1.33"
      android:installLocation="internalOnly">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="11" />
    <permission
        android:name="com.anod.car.home.permission.READ_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_read_settings"
        android:description="@string/permdesc_read_settings"
	/>
    <permission
        android:name="com.anod.car.home.permission.WRITE_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_write_settings"
        android:description="@string/permdesc_write_settings"
	/>
	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> 
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />    
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.anod.car.home.permission.READ_SETTINGS" />
    <uses-permission android:name="com.anod.car.home.permission.WRITE_SETTINGS" />
    
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    
    <application 
    	android:name="com.anod.car.home.CarWidgetApplication" 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name_pro"
    	android:backupAgent="com.anod.car.home.prefs.backup.BackupFileHelperAgent"
    >
		<service android:name="com.anod.car.home.UpdateService" />
		<service android:name="com.anod.car.home.incar.ModeService" />
		<service android:name="com.anod.car.home.incar.BroadcastService" />
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.anod.car.home.prefs.ShortcutEditActivity" />
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.anod.car.home.prefs.AllAppsActivity" />
		<activity android:name="com.anod.car.home.prefs.AppListConfiguration" android:configChanges="orientation"></activity>
		<activity android:name="com.anod.car.home.prefs.Configuration" android:configChanges="orientation">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
		    </intent-filter>
		</activity>
		<activity android:name="com.anod.car.home.prefs.ConfigurationLook" android:configChanges="orientation" />
		<activity android:name="com.anod.car.home.prefs.ConfigurationInCar" android:configChanges="orientation" />
		<activity android:name="com.anod.car.home.prefs.ConfigurationBackup" android:configChanges="orientation" />
		<activity android:name="com.anod.car.home.prefs.ConfigurationRestore" android:configChanges="orientation" />
		<activity android:name="com.anod.car.home.incar.ChangeBrightnessActivity" android:theme="@style/BrightnessTheme" />
		<activity android:name="com.anod.car.home.ShortcutActivity" android:theme="@style/BrightnessTheme" />
		<receiver android:name="com.anod.car.home.LargeProvider" android:label="@string/app_name_pro">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/carhome_appwidget_info_4x4" />
		</receiver>
        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:name="com.anod.car.home.model.LauncherProvider"
            android:authorities="com.anod.car.home.settings.pro"
            android:writePermission="com.anod.car.home.permission.WRITE_SETTINGS"
            android:readPermission="com.anod.car.home.permission.READ_SETTINGS" />

        <activity android:theme="@style/BrightnessTheme" android:label="@string/app_name_pro" android:name="com.anod.car.home.CarHomeActivity"  android:excludeFromRecents="true" android:launchMode="singleTask">
            <meta-data android:name="android.dock_home" android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_DOCK" />
            </intent-filter>
        </activity>
        
        <meta-data android:name="com.google.android.backup.api_key"
    		android:value="AEdPqrEAAAAIwrTs2H7J2Rs0kglDTHtziqQ8_7YbAZGeS7bDUA" />
    </application>
</manifest>