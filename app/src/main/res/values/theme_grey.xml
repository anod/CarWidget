<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeGray" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
        <item name="activityBackground">@color/activity_bg</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="cardBackground">@color/panel_background_grey</item>
        <item name="android:navigationBarColor">@color/material_bluegray_600</item>
    </style>

    <style name="AlertGray" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="DialogGrey" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeGray.NoActionBar" parent="AppThemeGray">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeGray.Transparent" parent="AppThemeGray">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>