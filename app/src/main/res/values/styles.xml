<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppListTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="AppListTheme.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/material_bluegray_600</item>
        <item name="android:navigationBarColor">@color/material_bluegray_600</item>
    </style>

    <style name="holo_btn_text">
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:paddingBottom">5.0dp</item>
        <item name="android:layout_marginLeft">4.0dp</item>
        <item name="android:layout_marginRight">4.0dp</item>
        <item name="android:layout_marginBottom">4.0dp</item>
        <item name="android:background">@color/holo_text_bg</item>
        <item name="android:paddingRight">5.0dp</item>
        <item name="android:paddingLeft">5.0dp</item>
    </style>

    <style name="bbb_btn">
        <item name="android:clipChildren">false</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">70dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bbb_btn_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bbb_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLength">7</item>
        <item name="android:shadowColor">#7F000000</item>
    </style>

    <style name="bbb_btn_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="incarButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingLeft">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingRight">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BrightnessTheme" parent="android:Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="cardsBtnText">
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#22000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:paddingBottom">5.0dp</item>
        <item name="android:paddingRight">5.0dp</item>
        <item name="android:paddingLeft">5.0dp</item>
    </style>

    <style name="Notification" parent="TextAppearance.Compat.Notification" />
    <style name="Notification.Title" parent="TextAppearance.Compat.Notification.Title"/>
    <style name="Notification.Line2" parent="TextAppearance.Compat.Notification.Line2"/>

    <style name="Notification.Button">
        <item name="android:background">@drawable/notification_custom_button_background</item>
    </style>

    <style name="AboutButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="iconTint">?attr/colorOnSurface</item>
    </style>
</resources>