<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/incar_mode"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3" />

		<TextView
			android:id="@+id/desc1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/detect_incar_description"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/panel_bg_normal"
			android:gravity="center_horizontal">

			<ImageView
				android:id="@+id/imageView"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_bluetooth_connected" />

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_usb" />

			<ImageView
				android:id="@+id/imageView3"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_headphones" />
		</LinearLayout>

		<TextView
			android:id="@+id/desc2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/adjust_incar_description"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

		<LinearLayout
			android:id="@+id/linearLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@color/panel_bg_normal"
			android:gravity="center_horizontal">

			<ImageView
				android:id="@+id/imageView4"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_brightness_medium" />

			<ImageView
				android:id="@+id/imageView5"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_bulb" />

			<ImageView
				android:id="@+id/imageView6"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_ring_volume" />

			<ImageView
				android:id="@+id/imageView7"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_volume_up" />

			<ImageView
				android:id="@+id/imageView8"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_bluetooth" />

			<ImageView
				android:id="@+id/imageView9"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:padding="10dp"
				android:src="@drawable/ic_action_wifi" />
		</LinearLayout>

		<TextView
			android:id="@+id/desc3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/enable_incar_description"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

		<TextView
			android:id="@+id/desc4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="12dp"
			android:text="@string/trial_description"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Chip" />

	</LinearLayout>
</ScrollView>