<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:paddingStart="@dimen/notification_padding"
        android:paddingEnd="@dimen/notification_padding"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/title"
            style="@style/Notification.Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2.0dip"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:maxLines="2"
            android:text="@string/incar_mode_enabled" />

        <TextView
            android:id="@android:id/text1"
            style="@style/Notification.Line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1.0dip"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:text="@string/trial_left" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn0"
        style="@style/Notification.Button"
        android:layout_width="@dimen/notification_button"
        android:layout_height="@dimen/notification_button"
        android:scaleType="centerInside"
        tools:src="@tools:sample/avatars"/>

    <ImageButton
        android:id="@+id/btn1"
        style="@style/Notification.Button"
        android:layout_width="@dimen/notification_button"
        android:layout_height="@dimen/notification_button"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_shortcut_play" />

    <ImageButton
        android:id="@+id/btn2"
        style="@style/Notification.Button"
        android:layout_width="@dimen/notification_button"
        android:layout_height="@dimen/notification_button"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_launcher_carwidget" />

</LinearLayout>