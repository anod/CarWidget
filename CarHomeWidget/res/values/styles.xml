<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppListTheme" parent="android:style/Theme.Dialog" />
    
    <style name="AppTheme" parent="android:style/Theme">
        <item name="android:windowTitleSize">@dimen/actionbar_compat_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBarCompat</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        
        <!-- for programmatic instantiation -->
        <item name="actionbarCompatTitleStyle">@style/ActionBarCompatTitle</item>
    </style>
    
    <style name="ActionBarCompat">
        <item name="android:background">@color/actionbar_bg_color</item>
    </style>

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <!-- layout_width/height/weight must be set in code -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="ActionBarCompatTitle" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>
    
     <style name="TitleBarButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/actionbar_compat_item</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/actionbar_compat_height</item>
    </style>
    
     
    <!-- Skin Chooser -->
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
    </style>
    <!-- Skins -->
    <style name="glass_btn">
        <item name="android:background">@drawable/glass_container</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_add_shortcut</item>
    </style>

    <style name="glass_btn_text">
        <item name="android:lines">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5.0dp</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

    <style name="holo_btn_text">
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">5.0dp</item>
        <item name="android:paddingEnd">5.0dp</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:paddingBottom">5.0dp</item>
        <item name="android:layout_marginStart">4.0dp</item>
        <item name="android:layout_marginEnd">4.0dp</item>
        <item name="android:layout_marginBottom">4.0dp</item>
        <item name="android:background">@color/holo_text_bg</item>
    </style>

	<style name="bbb_btn">
		<item name="android:clipChildren">false</item>
		<item name="android:paddingStart">3dp</item>
		<item name="android:paddingEnd">3dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">70dip</item>
		<item name="android:layout_weight">1</item> 
	</style>
	
    <style name="bbb_btn_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bbb_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLength">7</item>
        <item name="android:shadowColor">#7F000000</item>
    </style>

    <style name="bbb_btn_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
    </style>

    <style name="incarButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingStart">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingEnd">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="BrightnessTheme" parent="android:Theme.Translucent"> 
		<item name="android:windowIsTranslucent">true</item> 
		<item name="android:windowContentOverlay">@null</item> 
		<item name="android:windowNoTitle">true</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:backgroundDimEnabled">false</item> 
	</style>


</resources>