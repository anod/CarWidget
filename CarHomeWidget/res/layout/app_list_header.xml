<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout1"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal" android:background="@drawable/app_header_bg">
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:src="@drawable/ic_action_add" android:id="@+id/add_button"></ImageButton>
    <ImageButton android:layout_height="wrap_content" android:id="@+id/refresh_button" android:src="@drawable/ic_action_refresh" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/add_button"></ImageButton>
    <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/app_name_pro" android:id="@+id/title" android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_marginLeft="5dp"></TextView>
    
</RelativeLayout>
