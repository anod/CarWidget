<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/workspace"
        android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/container"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:paddingBottom="25.0dp"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/title_padding_bottom"
                    android:paddingLeft="3.0dp"
                    android:paddingRight="3.0dp"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout 
     	android:layout_width="match_parent"   
     	android:layout_height="wrap_content"
     	android:paddingTop="3dp"
     	android:paddingBottom="3dp"
     >
	    <ImageButton
	        android:id="@+id/btn_incar_switch"
	        style="@style/incarButton"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@id/workspace"
	        android:src="@drawable/ic_incar_enter"
		 />
	
	    <ImageButton
	        android:id="@+id/btn_settings"
	        style="@style/settingsButton"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/workspace"
	        android:src="@drawable/ic_settings" />
	</RelativeLayout>
</LinearLayout>