<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
	android:baselineAligned="false" 
>

    <LinearLayout
        android:id="@+id/workspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp" >

                <ImageButton
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/win7_container"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp" >

                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/win7_container"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" >

                <ImageButton
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/win7_container"
                    android:gravity="center"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" >

                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/win7_container"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
			android:layout_weight="1"
            android:layout_margin="2dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" >

                <ImageButton
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/win7_container"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" >

                <ImageButton
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/win7_container"
                    android:src="@drawable/ic_add_shortcut" />

                <TextView
                    android:id="@+id/btn_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/title_padding_bottom_win7"
                    android:text="@string/set_shortcut"
                    android:textColor="@color/default_font_color"
                    android:textSize="@dimen/text_size" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_weight="0"
		android:paddingTop="10.0dp"
		android:paddingBottom="10.0dp"
		android:paddingLeft="5.0dp"
		android:paddingRight="5.0dp"
    >
	    <ImageButton
	        android:id="@+id/btn_settings"
	        android:layout_width="wrap_content"
	        android:layout_height="140dp"
	        android:layout_alignParentTop="true"
	        android:background="@android:color/transparent"
	        android:src="@drawable/ic_settings_win7"
	        android:scaleType="fitStart" />
	
	    <ImageButton
	        android:id="@+id/btn_incar_switch"
	        android:layout_width="wrap_content"
	        android:layout_height="140dp"
	        android:layout_alignParentBottom="true"
	        android:background="@android:color/transparent"
	        android:src="@drawable/ic_incar_enter_win7"
	        android:scaleType="fitEnd"
		/>
	</RelativeLayout>
</LinearLayout>