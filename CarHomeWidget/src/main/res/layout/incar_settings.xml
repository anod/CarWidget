<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
>
<LinearLayout
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:padding="12dp"
		>

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/pref_detection"
			style="?attr/panelHeader"
	/>

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?attr/textColorSecondary"
			android:text="Select how app detects when you in the car"
			android:gravity="center"/>

	<GridLayout
			android:id="@+id/grid_detections"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:columnCount="5"
			android:paddingTop="1dp"
			android:paddingLeft="1dp"
		>
	</GridLayout>

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/pref_actions"
			style="?attr/panelHeader"
			android:layout_marginTop="@dimen/panel_header_margin"
			/>

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="?attr/textColorSecondary"
			android:text="Add actions to be applied when InCar mode detected"
			android:gravity="center"/>

	<GridLayout
			android:id="@+id/grid_actions"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:columnCount="@integer/incar_column_count"
			android:columnOrderPreserved="true"
			android:paddingTop="1dp"
			android:paddingLeft="1dp"
			android:baselineAligned="false"
		>

	</GridLayout>

	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/more"
			style="?attr/panelHeader"
			android:layout_marginTop="@dimen/panel_header_margin"
			/>


	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="?attr/panelItem"
			android:layout_marginTop="1dp"
			>

		<ImageView
				android:id="@android:id/icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_action_bluetooth_connected"
				/>

		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="4dp">

			<TextView
					android:id="@android:id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"
					android:text="@string/pref_power_contorl_bt"
					style="@style/textAlignStyle"
					android:textColor="@color/font_color"/>

			<TextView
					android:id="@android:id/summary"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@android:id/title"
					android:layout_alignLeft="@android:id/title"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:maxLines="4"
					android:text="@string/pref_power_plugged_bt_on_summary"
					style="@style/textAlignStyle"
					android:textColor="@color/font_color_sec"/>

		</RelativeLayout>

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="?attr/panelItem"
			android:layout_marginTop="1dp"
			android:id="@+id/version"
			>

		<ImageView
				android:id="@android:id/icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_add_shortcut_holo"
				/>

		<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="4dp">

			<TextView
					android:id="@android:id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:ellipsize="marquee"
					android:fadingEdge="horizontal"
					android:text="@string/shortcuts"
					style="@style/textAlignStyle"
					android:textColor="@color/font_color"/>

			<TextView
					android:id="@android:id/summary"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@android:id/title"
					android:layout_alignLeft="@android:id/title"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:maxLines="4"
					android:text="@string/shortcuts_summary"
					style="@style/textAlignStyle"
					android:textColor="@color/font_color_sec"/>

		</RelativeLayout>

	</LinearLayout>
</LinearLayout>
</ScrollView>