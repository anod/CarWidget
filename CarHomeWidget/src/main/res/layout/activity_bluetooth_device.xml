<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/panel_header_margin"
              android:layout_marginRight="@dimen/panel_header_margin"
    >


	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="?attr/panelHeader"
			android:layout_marginTop="@dimen/panel_header_margin"
			android:text="@string/bluetooth_device_category_title"
            android:layout_marginBottom="@dimen/preference_item_margin"
	/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/empty"
        android:background="?attr/panelHeaderBackground"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/no_paired_devices_found_summary"
                  android:layout_gravity="center" android:gravity="center_horizontal" android:padding="5dp"
        />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turn_on_bluetooth_summary"
            android:id="@android:id/toggle" android:checked="false"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

	<ListView android:id="@android:id/list"
			  android:layout_height="0dip"
			  android:layout_width="match_parent"
			  android:layout_weight="1"
			  tools:listitem="@layout/bluetooth_device_item">

	</ListView>


</LinearLayout>