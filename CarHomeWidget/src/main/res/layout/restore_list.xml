<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
	>

	<View android:layout_height="@dimen/panel_header_margin"
		  android:layout_width="match_parent" />

     <TextView android:id="@+id/header"
		style="?attr/panelHeader"
     	android:layout_height="wrap_content" 
     	android:layout_width="match_parent"
     	android:text="@string/choose_backup"
		android:layout_marginLeft="@dimen/panel_header_margin"
		android:layout_marginRight="@dimen/panel_header_margin"
		android:layout_marginBottom="@dimen/preference_item_margin"
     	/>

     <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:drawSelectorOnTop="false"
			   tools:listitem="@layout/restore_item"
			   android:divider="@android:color/transparent"
			 	android:dividerHeight="@dimen/preference_item_margin"/>

     <TextView android:id="@android:id/empty"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="@string/no_backup_files_found"/>
 </LinearLayout>
 