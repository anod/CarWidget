<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/configure"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3" />

		<TextView
			android:id="@+id/desc1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/configure_text"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:adjustViewBounds="true"
			android:paddingTop="12dp"
			android:src="@drawable/settings_preview" />



			<TextView
				android:id="@+id/desc2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:padding="4dp"
				android:drawableStart="@drawable/ic_holo_settings"
				android:text="@string/open_settings_description"
				android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

	</LinearLayout>
</ScrollView>