<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">


	<Switch
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/bluetooth"
			style="?attr/panelHeader"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:id="@android:id/toggle" android:checked="false" android:gravity="center_vertical"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="?attr/panelHeader"
			android:layout_marginTop="@dimen/panel_header_margin"
			android:text="@string/bluetooth_device_category_title"
			/>

	<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
			  android:text="@string/no_paired_devices_found_summary"
			  android:layout_gravity="center" android:gravity="center_horizontal" android:padding="5dp"
			  android:id="@android:id/empty"
	/>
	<ListView android:id="@android:id/list"
			  android:layout_height="0dip"
			  android:layout_width="match_parent"
			  android:layout_weight="1"
			  tools:listitem="@layout/bluetooth_device_item">


	</ListView>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingTop="4dip"
			android:paddingLeft="2dip"
			android:paddingRight="2dip"
			android:minHeight="54dip"
			style="?android:attr/buttonBarStyle"
		>
		<Button android:id="@android:id/button1"
				android:layout_width="0dip"
				android:layout_gravity="right"
				android:layout_weight="1"
				android:maxLines="2"
				android:layout_height="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:text="@android:string/ok"
				/>
	</LinearLayout>
</LinearLayout>