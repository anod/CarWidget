<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="NestedWeights,NestedWeights" >

	<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/workspace"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			android:baselineAligned="false"
			android:orientation="vertical">

		<LinearLayout
				android:id="@+id/row0"
				android:layout_width="match_parent"
				android:layout_height="@dimen/lockscreen_row_height"
				android:baselineAligned="false"
				android:orientation="horizontal">

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn0"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text0"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:drawablePadding="5.0dip"
						android:gravity="center"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text1"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/row1"
				android:visibility="gone"
				android:layout_width="match_parent"
				android:layout_height="@dimen/lockscreen_row_height"
				android:baselineAligned="false"
				android:orientation="horizontal">

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:drawablePadding="5.0dip"
						android:gravity="center"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text2"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn3"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:drawablePadding="5.0dip"
						android:gravity="center"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text3"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>
		</LinearLayout>

		<LinearLayout
				android:id="@+id/row2"
				android:visibility="gone"
				android:layout_width="match_parent"
				android:layout_height="@dimen/lockscreen_row_height"
				android:baselineAligned="false"
				android:orientation="horizontal">

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn4"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:drawablePadding="5.0dip"
						android:gravity="center"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text4"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>

			<FrameLayout
					android:layout_width="0dip"
					android:layout_height="fill_parent"
					android:layout_weight="1">

				<ImageButton
						android:id="@+id/btn5"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/btn_default_holo_light"
						android:drawablePadding="5.0dip"
						android:gravity="center"
						android:paddingBottom="25.0dp"
						android:src="@drawable/ic_add_shortcut_holo"/>

				<TextView
						android:id="@+id/btn_text5"
						style="@style/holo_btn_text"
						android:text="@string/set_shortcut"/>
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_incar_switch"
            style="@style/incarButton"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_transparent"
         />

        <ImageButton
            android:id="@+id/btn_settings"
            style="@style/settingsButton"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_holo_settings"
            android:background="@drawable/btn_transparent" 
        />
    </RelativeLayout>

</LinearLayout>