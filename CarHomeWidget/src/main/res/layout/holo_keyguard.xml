<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lockscreen_widget_height"
    android:background="@color/default_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="NestedWeights,NestedWeights" >

	<include layout="@layout/holo_workspace"
	/>

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_incar_switch"
            style="@style/incarButton"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_transparent"
         />

        <ImageButton
            android:id="@+id/btn_settings"
            style="@style/settingsButton"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_holo_settings"
            android:background="@drawable/btn_transparent" 
        />
    </RelativeLayout>

</LinearLayout>