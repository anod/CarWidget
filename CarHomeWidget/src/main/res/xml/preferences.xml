<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:key="shortcuts" android:title="@string/shortcuts" android:layout="@layout/pref_category_top">
        <com.anod.car.home.prefs.views.ShortcutPreference
            android:key="launch-component-0-%d"
            android:title="@string/set_shortcut" />
        <com.anod.car.home.prefs.views.ShortcutPreference
            android:key="launch-component-1-%d"
            android:title="@string/set_shortcut" />
