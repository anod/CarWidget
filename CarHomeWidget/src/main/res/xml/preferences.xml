            android:key="launch-component-2-%d"
            android:title="@string/set_shortcut" />
        <com.anod.car.home.prefs.views.ShortcutPreference
            android:key="launch-component-3-%d"
            android:title="@string/set_shortcut" />
        <com.anod.car.home.prefs.views.ShortcutPreference
            android:key="launch-component-4-%d"
            android:title="@string/set_shortcut" />
