<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppThemeGray" parent="Theme.AppCompat">
		<item name="panelItem">@style/panelItemGray</item>
		<item name="panelHeader">@style/panelHeaderGray</item>
        <item name="panelHeaderBackground">@drawable/panel_item_bg_grey</item>
        <item name="PreferencesItem">@style/PreferencesItemGray</item>
		<item name="buttonStyle">@style/buttonStyleGray</item>
		<item name="activityBgColor">@color/activity_bg</item>
		<item name="wizardTextItem">@style/wizardTextItemGray</item>
		<item name="textColor">@color/font_color_dark</item>

		<item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
		<item name="android:windowBackground">@color/activity_bg</item>

		<item name="android:preferenceStyle">@style/AppPreference</item>

		<item name="textColorPrimary">@color/primary_text_grey</item>
		<item name="textColorSecondary">@color/secondary_text_grey</item>
		<item name="textColorOpposite">@color/panel_bg_normal</item>

        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>

	</style>

	<style name="AppThemeGray.NoActionBar" parent="AppThemeGray" >
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppThemeGray.Transparent" parent="AppThemeGray">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
		<item name="android:windowContentOverlay">@null</item>

		<item name="android:windowActionBarOverlay">true</item>
        <!--
		<item name="actionBarStyle">@style/ActionBarCompatGrey.Transparent</item>
        -->
	</style>

	<!-- Skin Chooser -->
	<style name="ActionBarCompatGrey.Transparent" parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@null</item>
		<item name="android:actionBarDivider">@null</item>
		<item name="android:backgroundStacked">@null</item>
		<item name="android:backgroundSplit">@null</item>
	</style>

	<style name="panelItemGray" parent="panelItemBasic">
		<item name="android:background">@drawable/panel_item_bg_grey</item>
	</style>

	<style name="panelHeaderGray" parent="panelItemGray">
		<item name="android:textAppearance">@style/panelHeaderText</item>
	</style>
    
</resources>