<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppListTheme" parent="Theme.AppCompat.Dialog">
        <!--
        <item name="windowActionBar">false</item>
        //-->
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppListTheme.Light" parent="Theme.AppCompat.Light.Dialog" >
        <item name="windowActionBar">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="panelItem">@style/panelItemBasic</item>
        <item name="panelHeader">@style/panelHeaderBasic</item>
        <item name="PreferencesItem">@style/PreferencesItem</item>
        <item name="buttonStyle">@style/buttonStyleDefault</item>
        <item name="activityBgColor">@android:color/transparent</item>
        <item name="wizardTextItem">@style/wizardTextItemHolo</item>
        <item name="textColor">@android:color/white</item>

        <item name="textColorPrimary">?android:attr/textColorPrimary</item>
        <item name="textColorSecondary">?android:attr/textColorSecondary</item>
<!-- TODO: move to theme? -->
        <item name="colorPrimary">@color/material_bluegray_600</item>
        <item name="colorPrimaryDark">@color/material_bluegray_800</item>
        <item name="colorAccent">@color/material_bluegray_300</item>
    </style>

    <!-- Borderless ink button -->
    <style name="BorderlessButton.Light" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_mtrl_shape</item>
    </style>


    <!-- Colored borderless ink button -->
    <style name="BorderlessButton.Light.Colored" parent="BorderlessButton.Light">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <!-- Alert dialog button bar button -->
    <style name="ButtonBarStyle.Light" parent="BorderlessButton.Light.Colored">
        <item name="android:minWidth">64dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="DialogTheme.Light" parent="Theme.AppCompat.Light.Dialog">
        <!--
        <item name="android:windowBackground">?attr/colorPrimary</item>
        -->
        <item name="colorPrimary">@android:color/transparent</item>
    </style>



	<style name="AppPreference">
		<item name="android:background">@drawable/panel_item_bg_grey</item>
	</style>


	<style name="textAlignStyle">
		<item name="android:gravity">left</item>
	</style>


    <!-- Skins -->
    <style name="glass_btn">
        <item name="android:background">@drawable/glass_container</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_add_shortcut</item>
    </style>

    <style name="glass_btn_text">
        <item name="android:lines">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5.0dp</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>

    <style name="holo_btn_text" parent="textAlignStyle">
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:paddingBottom">5.0dp</item>
        <item name="android:layout_marginLeft">4.0dp</item>
        <item name="android:layout_marginRight">4.0dp</item>
        <item name="android:layout_marginBottom">4.0dp</item>
        <item name="android:background">@color/holo_text_bg</item>
        <item name="android:paddingRight">5.0dp</item>
        <item name="android:paddingLeft">5.0dp</item>
    </style>

	<style name="bbb_btn">
		<item name="android:clipChildren">false</item>
		<item name="android:paddingLeft">3dp</item>
		<item name="android:paddingRight">3dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">70dip</item>
		<item name="android:layout_weight">1</item> 
	</style>
	
    <style name="bbb_btn_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bbb_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">19sp</item>
        <item name="android:maxLength">7</item>
        <item name="android:shadowColor">#7F000000</item>
    </style>

    <style name="bbb_btn_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|bottom</item>
		<item name="android:scaleType">fitStart</item>
    </style>

    <style name="incarButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingLeft">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0.0dp</item>
        <item name="android:paddingRight">8.0dp</item>
        <item name="android:paddingTop">1.0dp</item>
        <item name="android:paddingBottom">1.0dp</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

	<style name="BrightnessTheme" parent="android:Theme.Translucent">
		<item name="android:windowIsTranslucent">true</item> 
		<item name="android:windowContentOverlay">@null</item> 
		<item name="android:windowNoTitle">true</item> 
		<item name="android:windowIsFloating">true</item> 
		<item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
	</style>

	<style name="panelItemBasic" parent="textAlignStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">6dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:background">@drawable/panel_item_bg_dark</item>
	</style>


	<style name="panelHeaderText">
		<item name="android:textColor">@color/font_color</item>
		<!--		<item name="android:textAllCaps">true</item> //-->
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="panelHeaderBasic" parent="panelItemBasic">
		<item name="android:textAppearance">@style/panelHeaderText</item>
		<item name="android:background">@drawable/panel_header_bg_dark</item>
	</style>

	<style name="WizardPageTitle" parent="textAlignStyle">
		<item name="android:id">@android:id/title</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:paddingLeft">6dip</item>
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">#ff0099cc</item>
		<!--
		<item name="android:fontFamily">sans-serif-thin</item>
		-->
	</style>

	<style name="WizardPageContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">@dimen/wizard_page_margin</item>
		<item name="android:paddingRight">@dimen/wizard_page_margin</item>
	</style>

	<style name="wizardTextItemBase">
		<item name="android:textSize">24sp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<style name="wizardTextItemGray" parent="wizardTextItemBase">
		<item name="android:textColor">@color/font_color_dark</item>
	</style>

	<style name="wizardTextItemHolo" parent="wizardTextItemBase">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="PreferencesItem">
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="PreferencesItemGray" parent="PreferencesItem">
		<item name="android:background">@drawable/panel_item_bg_grey</item>
	</style>

	<style name="buttonStyleDefault" parent="textAlignStyle">
		<item name="android:background">@drawable/panel_item_bg_dark</item>
	</style>

	<style name="buttonStyleGray" parent="buttonStyleDefault">
		<item name="android:background">@drawable/panel_item_bg_grey</item>
	</style>

    <style name="cardsBtnText" parent="textAlignStyle">
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#22000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:paddingBottom">5.0dp</item>
        <item name="android:paddingRight">5.0dp</item>
        <item name="android:paddingLeft">5.0dp</item>
    </style>
</resources>