<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppThemeHolo" parent="Theme.AppCompat.DayNight">
		<item name="panelItem">@style/panelItemBasic</item>
		<item name="panelHeader">@style/panelHeaderBasic</item>
        <item name="panelHeaderBackground">@drawable/panel_header_bg_dark</item>
		<item name="themeTabBackground">@drawable/tab_bg_dark</item>
		<item name="themeTabIndicatorColor">@color/panel_bg_dark_pressed</item>
		<item name="buttonStyle">@style/buttonStyleDefault</item>
		<item name="activityBgColor">@color/background_material_dark</item>
		<item name="wizardTextItem">@style/wizardTextItemHolo</item>
		<item name="textAppearanceMediumBackgroundInverse">@style/TextAppearance.AppCompat.Medium</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>

	<style name="AppThemeHolo.NoActionBar" parent="AppThemeHolo" >
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="ActionBarCompatHolo.Transparent" parent="Widget.AppCompat.ActionBar.Solid">
		<item name="android:background">@null</item>
		<item name="android:actionBarDivider">@null</item>
		<item name="android:backgroundStacked">@null</item>
		<item name="android:backgroundSplit">@null</item>
	</style>

	<!-- Skin Chooser -->
	<style name="AppThemeHolo.Transparent" parent="AppThemeHolo">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:actionBarStyle">@style/ActionBarCompatHolo.Transparent</item>
	</style>

</resources>