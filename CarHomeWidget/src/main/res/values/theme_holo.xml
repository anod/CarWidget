<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppThemeHolo" parent="Theme.MaterialComponents">
		<item name="colorPrimary">@color/secondaryColor</item>
		<item name="colorPrimaryDark">@color/secondaryDarkColor</item>
		<item name="activityBackground">@color/secondaryColor</item>
		<item name="colorAccent">@color/material_bluegray_300</item>
	</style>

	<style name="AlertHolo" parent="Theme.MaterialComponents.Dialog.Alert">
		<item name="colorPrimary">@color/secondaryColor</item>
		<item name="colorPrimaryDark">@color/secondaryDarkColor</item>
		<item name="colorAccent">@color/material_bluegray_300</item>
	</style>

	<style name="DialogHolo" parent="Theme.MaterialComponents.Dialog">
		<item name="colorPrimary">@color/secondaryColor</item>
		<item name="colorPrimaryDark">@color/secondaryDarkColor</item>
		<item name="colorAccent">@color/material_bluegray_300</item>
	</style>

	<style name="AppThemeHolo.NoActionBar" parent="AppThemeHolo" >
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="ActionBarCompatHolo.Transparent" parent="Widget.AppCompat.ActionBar.Solid">
		<item name="android:background">@null</item>
		<item name="android:actionBarDivider">@null</item>
		<item name="android:backgroundStacked">@null</item>
		<item name="android:backgroundSplit">@null</item>
	</style>

	<!-- Skin Chooser -->
	<style name="AppThemeHolo.Transparent" parent="AppThemeHolo">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:actionBarStyle">@style/ActionBarCompatHolo.Transparent</item>
	</style>

</resources>