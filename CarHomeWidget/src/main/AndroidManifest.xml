<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anod.car.home"
    android:installLocation="internalOnly"
    android:versionCode="31"
    android:versionName="1.6" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <permission
        android:name="com.anod.car.home.permission.READ_SETTINGS"
        android:description="@string/permdesc_read_settings"
        android:label="@string/permlab_read_settings"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal" />
    <permission
        android:name="com.anod.car.home.permission.WRITE_SETTINGS"
        android:description="@string/permdesc_write_settings"
        android:label="@string/permlab_write_settings"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.anod.car.home.permission.READ_SETTINGS" />
    <uses-permission android:name="com.anod.car.home.permission.WRITE_SETTINGS" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

	<uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
			android:name="com.anod.car.home.CarWidgetApplication"
			android:backupAgent="com.anod.car.home.prefs.backup.BackupFileHelperAgent"
			android:icon="@drawable/ic_launcher"
			android:label="@string/app_name"
			android:theme="@style/AppTheme"
			android:allowBackup="true"
         >
        <service android:name="com.anod.car.home.UpdateService" />

        <activity
            android:name="com.anod.car.home.prefs.ShortcutEditActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.anod.car.home.prefs.AllAppsActivity"
            android:theme="@style/AppListTheme" />
        <activity
            android:name="com.anod.car.home.prefs.IconThemesActivity"
            android:theme="@style/AppListTheme"
            android:label="@string/icons_theme" />
		<activity
            android:name="com.anod.car.home.prefs.Configuration"
            android:label="@string/settings"
            android:launchMode="singleTop"
			android:clearTaskOnLaunch="true"
        >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationLook"
            android:configChanges="orientation" 
         />
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationInCarVolume"
         />
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationInCar"
         />
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationBackup"
         />
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationRestore"
        />
        <activity
            android:name="com.anod.car.home.ShortcutActivity"
            android:theme="@style/BrightnessTheme"
            android:exported="true" />
        <activity
            android:name="com.anod.car.home.prefs.LookAndFeelActivity"
            android:theme="@style/AppTheme.Transparent"
        />
        <activity
            android:name="com.anod.car.home.prefs.ActivityPicker"
            android:theme="@style/AppListTheme"
            android:finishOnCloseSystemDialogs="true" />
        
        <activity
            android:name="com.anod.car.home.CarHomeActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:theme="@style/BrightnessTheme" >
            <meta-data
                android:name="android.dock_home"
                android:value="true" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_DOCK" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.anod.car.home.prefs.ConfigurationNotifShortcuts"
            android:configChanges="orientation" 
            />
        <activity
            android:name="com.anod.car.home.incar.ChangeBrightnessActivity"
            android:theme="@style/BrightnessTheme" />

        <activity
            android:name="com.anod.car.home.incar.SwitchInCarActivity"
            android:clearTaskOnLaunch="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/switch_in_car_activity"
            android:noHistory="true"
            android:theme="@style/BrightnessTheme" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".ui.WidgetsListActivity"/>
		<activity android:name=".ui.WizardActivity"/>

		<service android:name="com.anod.car.home.incar.ModeService" />
        <service android:name="com.anod.car.home.incar.BroadcastService" />
		<service android:name="com.anod.car.home.incar.ActivityRecognitionService" />

		<meta-data
				android:name="com.google.android.backup.api_key"
				android:value="AEdPqrEAAAAIwrTs2H7J2Rs0kglDTHtziqQ8_7YbAZGeS7bDUA" />

	</application>

</manifest>