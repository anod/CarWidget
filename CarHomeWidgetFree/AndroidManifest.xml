<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.anod.car.home.free"
      android:versionCode="7"
      android:versionName="1.33"
      android:installLocation="internalOnly">
      
    <uses-sdk android:minSdkVersion="8" />

    <permission
        android:name="com.anod.car.home.permission.READ_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_read_settings"
        android:description="@string/permdesc_read_settings"/>
    <permission
        android:name="com.anod.car.home.permission.WRITE_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal"
        android:label="@string/permlab_write_settings"
        android:description="@string/permdesc_write_settings"/>
        
	<uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.anod.car.home.permission.READ_SETTINGS" />
    <uses-permission android:name="com.anod.car.home.permission.WRITE_SETTINGS" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
 
    <application android:name="com.anod.car.home.CarWidgetApplication" android:icon="@drawable/icon" android:label="@string/app_name_free">
		<service android:name="com.anod.car.home.UpdateService" />
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.anod.car.home.prefs.ShortcutEditActivity" />
		<activity android:theme="@android:style/Theme.Dialog" android:name="com.anod.car.home.prefs.AllAppsActivity" />
		<activity android:name="com.anod.car.home.prefs.Configuration">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
		    </intent-filter>
		</activity>
		<activity android:name="com.anod.car.home.ShortcutActivity" android:theme="@style/BrightnessTheme" />
		<receiver android:name="com.anod.car.home.LargeProvider" android:label="@string/app_name_free">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/carhome_appwidget_info_4x4" />
		</receiver>
		        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:name="com.anod.car.home.model.LauncherProvider"
            android:authorities="com.anod.car.home.settings"
            android:writePermission="com.anod.car.home.permission.WRITE_SETTINGS"
            android:readPermission="com.anod.car.home.permission.READ_SETTINGS" />
        <activity android:theme="@style/BrightnessTheme" android:label="@string/app_name_free" android:name="com.anod.car.home.CarHomeActivity"  android:excludeFromRecents="true" android:launchMode="singleTask">
            <meta-data android:name="android.dock_home" android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_DOCK" />
            </intent-filter>
        </activity>
    </application>
</manifest>