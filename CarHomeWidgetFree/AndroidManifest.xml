<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="internalOnly"
    package="com.anod.car.home.free"
    android:versionCode="16"
    android:versionName="1.46" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <permission
        android:description="@string/permdesc_read_settings"
        android:label="@string/permlab_read_settings"
        android:name="com.anod.car.home.permission.READ_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal" />
    <permission
        android:description="@string/permdesc_write_settings"
        android:label="@string/permlab_write_settings"
        android:name="com.anod.car.home.permission.WRITE_SETTINGS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.anod.car.home.permission.READ_SETTINGS" />
    <uses-permission android:name="com.anod.car.home.permission.WRITE_SETTINGS" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_free"
        android:name="com.anod.car.home.CarWidgetApplication" >
        <service android:name="com.anod.car.home.UpdateService" />

        <activity
            android:name="com.anod.car.home.prefs.ShortcutEditActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.anod.car.home.prefs.AllAppsActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="com.anod.car.home.prefs.Configuration" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:name="com.anod.car.home.prefs.ConfigurationLook" />
        <activity
            android:configChanges="orientation"
            android:name="com.anod.car.home.prefs.ConfigurationInCar" />
        <activity
            android:configChanges="orientation"
            android:name="com.anod.car.home.prefs.ConfigurationBackup" />
        <activity
            android:configChanges="orientation"
            android:name="com.anod.car.home.prefs.ConfigurationRestore" />
        <activity
            android:name="com.anod.car.home.ShortcutActivity"
            android:theme="@style/BrightnessTheme" />

        <receiver
            android:label="@string/app_name_free"
            android:name="com.anod.car.home.LargeProvider" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/carhome_appwidget_info_4x4" />
        </receiver>
        <!-- The settings provider contains Home's data, like the workspace favorites -->
        <provider
            android:authorities="com.anod.car.home.settings"
            android:name="com.anod.car.home.model.LauncherProvider"
            android:readPermission="com.anod.car.home.permission.READ_SETTINGS"
            android:writePermission="com.anod.car.home.permission.WRITE_SETTINGS" />

        <activity
            android:excludeFromRecents="true"
            android:label="@string/app_name_free"
            android:launchMode="singleTask"
            android:name="com.anod.car.home.CarHomeActivity"
            android:theme="@style/BrightnessTheme" >
            <meta-data
                android:name="android.dock_home"
                android:value="true" />

            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.CAR_DOCK" />
            </intent-filter>
        </activity>
    </application>

</manifest>